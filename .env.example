# Core Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database (Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/larity?schema=public"

# Infrastructure
REDIS_URL="redis://localhost:6379"
RABBITMQ_URL="amqp://larity:larity_dev@localhost:5672"
RABBITMQ_PREFETCH=10

# Telemetry
# Applications export telemetry to the local collector by default.
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
# Grafana Cloud OTLP endpoint, e.g.:
# https://otlp-gateway-prod-us-east-0.grafana.net/otlp
GRAFANA_CLOUD_OTLP_ENDPOINT=
# Grafana Cloud OTLP basic auth credentials
GRAFANA_CLOUD_USER=
GRAFANA_CLOUD_PASSWORD=

# Apps: Control
FRONTEND_URL="http://localhost:5173"
BETTER_AUTH_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Apps: Realtime
REALTIME_PORT=9001

# Apps: Desktop
# Used for Tauri development host binding
TAURI_DEV_HOST=

# Packages: STT (Speech-to-Text)
DEEPGRAM_API_KEY=
MAX_CONNECTIONS=50

# Packages: Meeting Mode
MERGE_GAP_MS=5000
MAX_BUFFER_SIZE=20
