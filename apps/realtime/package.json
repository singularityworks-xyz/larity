  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/opentelemetry": "^1.4.10",
    "@larity/logger": "workspace:*",
