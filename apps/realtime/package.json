{
  "name": "realtime",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=../../.env --watch src/index.ts",
    "test": "bun test",
    "test:client": "bun run scripts/test-client.ts",
