{
  "name": "larity",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.1.34",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --no-daemon",
    "build": "turbo run build --no-daemon",
    "lint": "turbo run lint --no-daemon",
    "lint:root": "biome check --log-level=info --diagnostic-level=warn .",
    "lint:fix": "turbo run lint:fix --no-daemon && bun run lint:root --write",
    "format": "turbo run format --no-daemon && biome format --write .",
    "format:check": "turbo run format:check --no-daemon && biome format .",
    "check": "ultracite check",
    "prepare": "husky",
    "fix": "ultracite fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/amqplib": "^0.10.8",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "prisma": "^7.2.0",
    "turbo": "^2.6.3",
    "ultracite": "7.1.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "amqplib": "^0.10.9",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3"
  }
}
